<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mvc.mapper.BoardMapper">
	<cache />
	
	<insert id="insertBoard" parameterType="Board">
		insert into board2 values(board2_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0, #{fname})
	</insert>
	
	<select id="listBoard"  parameterType="Search" resultType="Board" >
		select * from board2 
		<if test="area != null">
			<where>
				<foreach collection="area" item="item" separator="OR" 
						open="(" close=")">					
					${item} like #{searchKey}
				</foreach>
			</where>
		</if>
		order by seq desc
	</select>
	
	<select id="detailBoard" parameterType="int" resultType="Board">
		select * from board2 where seq = #{seq}
	</select>
	
	<update id="updateBoard" parameterType="Board">
		update board2 set title = #{title}, contents = #{contents} where seq = #{seq}
	</update>
	
	<delete id="deleteBoard" parameterType="int">
		delete from board2 where seq = #{seq}
	</delete>
	
	<insert id="insertReply" parameterType="Reply">
		insert into reply2 values(reply2_seq.nextval, #{r_writer}, #{r_contents}, sysdate, #{seq})
	</insert>
	
	<select id="listReply" parameterType="int" resultType="Reply">
		select * from reply2 where seq = #{seq}
	</select>
	
	<delete id="deleteReply" parameterType="int">
		delete from reply2 where r_no = #{r_no}
	</delete>
	
	<select id="countBoard" parameterType="Search" resultType="int">
		select count(*) from board2
		<if test= "area != null">
			<where>				
				<foreach collection="area" item="item" separator="OR"
						open="(" close=")" >
							${item} LIKE #{searchKey}
				</foreach>
			</where>
		</if>
	</select>
	
	<update id="cntBoard" parameterType="int">
		update board2 set hitcount = hitcount+1 where seq = #{seq}
	</update>
	
	
</mapper>